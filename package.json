{
  "name": "nls-parcel-uno-stoll",
  "version": "1.0.0-0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node prebuild && parcel index.html --open",
    "host": "node prebuild && parcel index.html --open --hmr-hostname 0.0.0.0:1234",
    "build": "node prebuild && parcel build index.html",
    "prebuild": "node prebuild.js"
  },
  "author": "Michael Werner Czechowski <mail@dailysh.it>",
  "license": "Apache-2.0",
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "lodash": "^4.17.15",
    "parcel-plugin-static-files-copy": "^2.2.1",
    "posthtml-img-autosize": "^0.1.4",
    "posthtml-include": "^1.2.0",
    "sass": "^1.16.0",
    "tailwindcss": "^1.0.5",
    "typescript": "^3.2.1"
  },
  "dependencies": {
    "parcel-bundler": "^1.10.3"
  },
  "staticFiles": {
    "staticPath": "src/static",
    "watcherGlob": "**"
  },
  "srcSetAssets": {
    "assetsPath": "./src/assets/images/",
    "breakpoints": {
      "640w": { 
        "width": 640
      },
      "768w": { 
        "width": 768
      },
      "1024w": { 
        "width": 1024
      },
      "1280w": { 
        "width": 1280
      }
    },
    "allowedExtensions": [
      ".png",
      ".PNG",
      ".jpg",
      ".JPG",
      ".jpeg",
      ".JPEG"
    ]
  }
}
